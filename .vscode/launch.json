  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server nodemon",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
      "program": "${workspaceFolder}/server/server.js",
      "restart": true,
      "console" :"integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "args": [
        "--exec", 
        "babel-node"
      ]
    }
  ]
}